@model IEnumerable<TodoListMvc.Models.Todo>
@{ ViewData["Title"] = "Home"; }

<div class="p-3 mx-auto">
    <h2>Todo List</h2>
    <div>
        <div class="d-flex">
            @*<input type="text" placeholder="Add your new todo" class="form-control" />*@
            <a asp-action="Create" asp-controller="Home" class="btn btn-success w-100"><i class="fas fa-plus"></i></a>
        </div>
        @if (Model.Count() > 0)
        {
            foreach(var item in Model)
            { 
                <div class="py-2">
                    <div class="bg-light p-2 mt-2 d-md-flex justify-content-between">
                        <h5>@item.Description</h5>
                        <div class="row">
                            <a asp-controller="Home" asp-action="Edit" asp-route-id="@item.Id" class="btn btn-secondary col-6"><i class="far fa-edit"></i></a>
                            <a asp-controller="Home" asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger col-6"><i class="far fa-trash-alt"></i></a>
                        </div>
                    </div>
                </div>
            }
            <div class="d-flex align-items-center py-5 justify-content-between">
                <h5>You have @Model.Count() pending tasks</h5>
            </div>
        }
        else
        {
            <h5 class="text-center mt-3">There is not any todo yet.</h5>
        }

    </div>
</div>