@model IEnumerable<TodoListMvc.Models.Todo>
@{ ViewData["Title"] = "Home"; }

<div class="p-3 mx-auto">
    <h2>Todo List</h2>
    <form>
        <div class="d-flex">
            <input type="text" placeholder="Add your new todo" class="form-control" />
            <button class="btn btn-success ml-1"><i class="fas fa-plus"></i></button>
        </div>
        @if (Model.Count() > 0)
        {
            foreach(var item in Model)
            { 
                <div class="py-2">
                    <div class="bg-light p-2 mt-2 d-flex justify-content-between">
                        <h5>@item.Description</h5>
                        <div>
                            <button class="btn btn-secondary"><i class="far fa-edit"></i></button>
                            <button class="btn btn-danger"><i class="far fa-trash-alt"></i></button>
                        </div>
                    </div>
                </div>
            }
            <div class="d-flex align-items-center py-5 justify-content-between">
                <h5>You have @Model.Count() pending tasks</h5>
                <button class="btn btn-info">Clear All</button>
            </div>
        }
        else
        {
            <h5 class="text-center mt-3">There is not any todo.</h5>
        }

    </form>
</div>